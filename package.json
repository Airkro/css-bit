{
  "private": true,
  "name": "css-bit-dev",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/airkro/css-bit",
  "repository": {
    "type": "git",
    "url": "https://github.com/airkro/css-bit.git"
  },
  "bugs": {
    "url": "https://github.com/airkro/css-bit/issues"
  },
  "scripts": {
    "generate": "node config/generate.mjs",
    "lint:staged": "nice-move lint staged",
    "lint:type": "tsc --noEmit",
    "lint:version": "syncpack lint",
    "prepare": "nice-move git hooks",
    "snapshot": "ava --fail-fast -u -w",
    "test": "ava --fail-fast",
    "version:pin": "syncpack fix-mismatches"
  },
  "devDependencies": {
    "@ant-design/colors": "^7.0.2",
    "@bring-it/npm": "^0.5.4",
    "@nice-move/all-in-base": "^0.1.1",
    "@nice-move/syncpack-config": "^0.2.2",
    "ava": "^6.1.3",
    "eslint": "^8.57.0",
    "eslint-plugin-ava": "^14.0.0",
    "fs-chain": "^8.2.3",
    "garou": "^0.7.5",
    "nodemon": "^3.1.3",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "stylelint": "^16.6.1",
    "syncpack": "^12.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.4.5"
  },
  "peerDependencies": {
    "@css-bit/tailwind-antd-color": "workspace:~",
    "@css-bit/tailwind-smart-config": "workspace:~"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=18 || ^14.17.0 || ^16.13.0"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "nice-move": {
    "import-groups": [
      "nice-move-preset",
      "^@css-bit\\/"
    ]
  },
  "nodemonConfig": {
    "delay": 2,
    "exec": "yarn test --verbose",
    "ext": "*",
    "watch": [
      "packages/**",
      "test/**"
    ]
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}
