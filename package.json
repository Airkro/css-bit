{
  "private": true,
  "name": "css-bit",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/airkro/css-bit",
  "repository": {
    "type": "git",
    "url": "https://github.com/airkro/css-bit.git"
  },
  "bugs": {
    "url": "https://github.com/airkro/css-bit/issues"
  },
  "scripts": {
    "generate": "node config/generate.mjs",
    "lint:staged": "nice-move lint staged",
    "prepare": "nice-move git hooks",
    "snapshot": "ava --fail-fast -u",
    "test": "ava --fail-fast"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@ant-design/colors": "^7.0.0",
    "@bring-it/npm": "^0.1.1",
    "@nice-move/cli": "^0.10.8",
    "@nice-move/eslint-config-base": "^0.9.13",
    "@nice-move/prettier-config": "^0.8.1",
    "@nice-move/stylelint-config": "^0.9.4",
    "ava": "^5.3.0",
    "eslint": "^8.42.0",
    "eslint-plugin-ava": "^14.0.0",
    "fs-chain": "^8.2.1",
    "garou": "^0.6.10",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "stylelint": "^15.7.0",
    "tailwindcss": "^3.3.2"
  },
  "engines": {
    "node": ">=16.13.0 || ^14.17.0"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "nice-move": {
    "import-groups": "nice-move-preset",
    "internal-regex": "^@css-bit\\/"
  },
  "nodemonConfig": {
    "delay": 2,
    "exec": "yarn test --verbose",
    "ext": "*",
    "watch": [
      "packages/**",
      "test/**"
    ]
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}