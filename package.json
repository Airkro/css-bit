{
  "name": "css-bit-dev",
  "version": "0.0.32",
  "license": "MIT",
  "scripts": {
    "prebuild": "prettier package/src/**/*.{css,scss} --write && stylelint package/src/**/*.{css,scss} --fix",
    "build": "node-sass package/reboot.scss -o package/dist && node-sass package/index.scss -o package/dist",
    "postbuild": "prettier package/dist/*.css --write && stylelint package/dist/*.css --fix",
    "format": "nice-move lint",
    "generate": "node generate-antd-color",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect"
  },
  "devDependencies": {
    "@ant-design/colors": "^4.0.0",
    "@nice-move/cli": "^0.3.5",
    "@nice-move/eslint-config-base": "^0.2.13",
    "@nice-move/prettier-config": "^0.2.1",
    "@nice-move/stylelint-config": "^0.2.6",
    "eslint": "^6.8.0",
    "fs-chain": "^0.0.7",
    "husky": "^4.2.5",
    "lodash": "^4.17.15",
    "node-sass": "^4.14.0",
    "prettier": "^2.0.5",
    "stylelint": "^13.3.3"
  },
  "engines": {
    "node": "^12"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "husky": {
    "hooks": {
      "pre-commit": "nice-move lint"
    }
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config",
    "ignoreFiles": [
      "**/dist/*.*"
    ]
  },
  "snyk": true,
  "dependencies": {
    "snyk": "^1.316.1"
  }
}