{
  "private": true,
  "name": "css-bit-dev",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/airkro/css-bit",
  "repository": {
    "type": "git",
    "url": "https://github.com/airkro/css-bit.git"
  },
  "bugs": {
    "url": "https://github.com/airkro/css-bit/issues"
  },
  "scripts": {
    "generate": "node config/generate.mjs",
    "lint:staged": "nice-move lint staged",
    "lint:type": "tsc --noEmit",
    "lint:version": "syncpack lint",
    "prepare": "nice-move git hooks",
    "snapshot": "ava --fail-fast -u -w",
    "test": "ava --fail-fast",
    "version:pin": "syncpack fix-mismatches"
  },
  "devDependencies": {
    "@ant-design/colors": "^7.1.0",
    "@bring-it/npm": "^0.5.9",
    "@nice-move/all-in-base": "^0.2.10",
    "@nice-move/syncpack-config": "^0.2.9",
    "ava": "^6.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-ava": "^14.0.0",
    "fs-chain": "^8.2.4",
    "garou": "^0.8.1",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "stylelint": "^16.10.0",
    "syncpack": "^13.0.0",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.3"
  },
  "peerDependencies": {
    "@css-bit/tailwind-antd-color": "workspace:~",
    "@css-bit/tailwind-smart-config": "workspace:~"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=18 || ^14.17.0 || ^16.13.0"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "nice-move": {
    "import-groups": [
      "nice-move-preset",
      "^@css-bit\\/"
    ]
  },
  "nodemonConfig": {
    "delay": 2,
    "exec": "yarn test --verbose",
    "ext": "*",
    "watch": [
      "packages/**",
      "test/**"
    ]
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  }
}
